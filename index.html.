<body>
  <h1>Grow a Garden Stock Tracker</h1>  <div class="section" id="seedStock">
    <h2>Seed Shop</h2>
    <div id="seedItems">Loading...</div>
  </div>  <div class="section" id="gearStock">
    <h2>Gear Shop</h2>
    <div id="gearItems">Loading...</div>
  </div>  <script>
    async function fetchStock() {
      try {
        const response = await fetch('https://api.vulcanvalues.com/api/gag/stock');
        const data = await response.json();

        const seedItems = document.getElementById('seedItems');
        seedItems.innerHTML = data.seedStock.map(item => `<div class="stock-item ${item.rarity.toLowerCase()}">${item.name} (${item.rarity})</div>`).join('');

        const gearItems = document.getElementById('gearItems');
        gearItems.innerHTML = data.gearStock.map(item => `<div class="stock-item ${item.rarity.toLowerCase()}">${item.name} (${item.rarity})</div>`).join('');

      } catch (error) {
        console.error('Error fetching stock:', error);
      }
    }

    fetchStock();
    setInterval(fetchStock, 60000); // refresh every 1 minute
  </script></body>
</html>